{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": ".",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@models/*": [
        "models/*"
      ],
      "@controllers/*": [
        "src/controllers/*"
      ],
      "@routes/*": [
        "src/routes/*"
      ],
      "@config/*": [
        "src/config/*"
      ]
    }
  },
  "include": [
    "src",
    "models",
    "migrations",
    "seeders"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}